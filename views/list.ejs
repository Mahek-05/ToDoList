<%- include('header'); -%>
    <div class="box" id="heading">
        <h1><%= day %></h1>
    </div>
    <div class="box">
        <% for(let i=0; i<listItems.length; i++) { %>
            <form action="/remove" method="post">
                <div class="item">
                    <input type="checkbox">
                    <p><%= listItems[i] %></p>
                    <input type="hidden" name="input" value="<%= listItems[i] %>">
                    <button class="remove" type="submit"><i class="fa-solid fa-trash" style="color:#A683E3"></i></button>
                </div>
            </form>
        <% } %>
        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button id="addBtn" type="submit" name="button">+</button>
        </form>
    </div>
<%- include('footer'); -%>